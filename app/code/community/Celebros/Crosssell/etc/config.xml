<config>
    <modules>
        <Celebros_Crosssell>
            <version>0.9.1</version>
            <build>101</build>
        </Celebros_Crosssell>
    </modules>
    <frontend>
        <routers>
            <celebros_crosssell>
                <use>standard</use>
                <args>
                    <module>Celebros_Crosssell</module>
                    <frontName>celebros_crosssell</frontName>
                </args>
            </celebros_crosssell>
        </routers>
        <layout>
            <updates>
                <celebros_crosssell>
                    <file>celebros_crosssell.xml</file>
                </celebros_crosssell>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Celebros_Crosssell before="Mage_Adminhtml">Celebros_Crosssell_Adminhtml</Celebros_Crosssell>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
         <layout>
            <updates>
                <celebros_crosssell>
                    <file>celebros_crosssell.xml</file>
                </celebros_crosssell>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <celebros_crosssell>
                <class>Celebros_Crosssell_Model</class>
                <resourceModel>celebros_crosssell_mysql4</resourceModel>
            </celebros_crosssell>
            <celebros_crosssell_mysql4>
                <class>Celebros_Crosssell_Model_Mysql4</class>
            </celebros_crosssell_mysql4>
        </models>
        <resources>
            <celebros_crosssell_setup>
                <setup>
                    <module>Celebros_Crosssell</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </celebros_crosssell_setup>
            <celebros_crosssell_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </celebros_crosssell_write>
            <celebros_crosssell_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </celebros_crosssell_read>
        </resources>
        <blocks>
            <celebros_crosssell>
                <class>Celebros_Crosssell_Block</class>
            </celebros_crosssell>
            <checkout>
                <rewrite>
                    <cart_crosssell>Celebros_Crosssell_Block_Checkout_Cart_Crosssell</cart_crosssell>
                </rewrite>
            </checkout>
            <catalog>
                <rewrite>
                    <product_list_upsell>Celebros_Crosssell_Block_Catalog_Product_List_Upsell</product_list_upsell>
                </rewrite>
            </catalog>
            <enterprise_targetrule>
                <rewrite>
                    <catalog_product_list_upsell>Celebros_Crosssell_Block_TargetRule_Catalog_Product_List_Upsell</catalog_product_list_upsell>
                    <checkout_cart_crosssell>Celebros_Crosssell_Block_TargetRule_Checkout_Cart_Crosssell</checkout_cart_crosssell>
                </rewrite>
            </enterprise_targetrule>
        </blocks>
        <helpers>
            <celebros_crosssell>
                <class>Celebros_Crosssell_Helper</class>
            </celebros_crosssell>
        </helpers>
    </global>
    <default>
        <conversionpro>
            <general_settings>
                <conversionpro_enabled>0</conversionpro_enabled>
                <host></host>
                <port>6035</port>
                <sitekey></sitekey>
            </general_settings>
            <display_settings>
                <campaigns_enabled>1</campaigns_enabled>
                <alt_message translate="label">We do not have {{query}}, maybe you will be interested in {{new_query}}</alt_message>
                <price_selector>textual</price_selector>
                <price_slider_ajax_enabled>0</price_slider_ajax_enabled>
                <enable_multiselect>0</enable_multiselect>
                <go_to_product_on_one_result>1</go_to_product_on_one_result>
                <collapse>0</collapse>
                <collapse_qty>10</collapse_qty>
                <fallback_redirect>0</fallback_redirect>
                <fallback_redirect_url_search_query>1</fallback_redirect_url_search_query>
            </display_settings>
            <crosssell_settings>
                <crosssell_limit>4</crosssell_limit>
                <upsell_limit>4</upsell_limit>
            </crosssell_settings>
            <export_settings>
                <zipname>products.zip</zipname>
                <datahistoryname>Data_History.zip</datahistoryname>
                <delimiter>\t</delimiter>
                <enclosed_values>"</enclosed_values>
                <min_tier_price>0</min_tier_price>
                <type>file</type>
                <path></path>
                <global_export>0</global_export>
                <extra_tables></extra_tables>
            </export_settings>
            <nav_to_search_settings>
                <nav_to_search>0</nav_to_search>
                <nav_to_search_search_by>textual</nav_to_search_search_by>
                <nav_to_search_use_full_category_path>category</nav_to_search_use_full_category_path>
                <nav_to_search_enable_blacklist>0</nav_to_search_enable_blacklist>
            </nav_to_search_settings>
            <advanced>
                <single_process>0</single_process>
                <export_chunk_size>1000</export_chunk_size>
                <export_process_limit>3</export_process_limit>
                <request_lifetime>3600</request_lifetime>
                <import_override>1</import_override>
                <enable_monitoring>0</enable_monitoring>
                <enable_connectivity>0</enable_connectivity>
                <connectivity_attempts>5</connectivity_attempts>
                <connectivity_failures>3</connectivity_failures>
            </advanced>
            <advanced>
                <integration_mode>embedded</integration_mode>
            </advanced>
        </conversionpro>
    </default>
</config>